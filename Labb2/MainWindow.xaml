<Window x:Class="Labb2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb2"
        xmlns:views="clr-namespace:Labb2.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="900">
    <Grid>
        <TabControl>
            <TabItem Name="StockTab" Header="Stock">
                <views:StockView></views:StockView>
            </TabItem>
            <TabItem Name="AuthorBookTab" Header="Authors/Books">
                <views:AuthorBookView></views:AuthorBookView>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
